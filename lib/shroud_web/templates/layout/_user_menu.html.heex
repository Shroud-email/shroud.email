<ul>
<%= if @current_user do %>
  <li class="mr-3"><%= @current_user.email %></li>
  <li><%= link "Settings", to: Routes.user_settings_path(@conn, :edit), class: "btn btn-sm btn-ghost rounded-btn" %></li>
  <li><%= link "Log out", to: Routes.user_session_path(@conn, :delete), method: :delete, class: "btn btn-sm btn-ghost rounded-btn" %></li>
<% else %>
  <li><%= link "Log in", to: Routes.user_session_path(@conn, :new), class: "btn btn-sm btn-ghost rounded-btn" %></li>
<% end %>
</ul>
